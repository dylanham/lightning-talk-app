.page-header
  .pull-right
    = link_to 'Index', lightning_talks_path, class: 'btn btn-info'
  %h1= @user.name
%table.table
  %thead
    %tr
      %th Description
      %th Time
      %th{colspan: 3} Date
  %tbody
    - @user.lightning_talks.each do |talk|
      %tr
        %td= talk.description
        %td= talk.talk_time.strftime('%l:%M %p')
        %td= talk.date.strftime("%A %m/%d")
        %td.text-right
          = link_to 'Edit', edit_lightning_talk_path(talk), class:"btn btn-primary"
