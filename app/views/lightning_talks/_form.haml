- if @lightning_talk.errors.any?
  - @lightning_talk.errors.full_messages.each do |message|
    %p= message
= form_for @lightning_talk do |f|
  = f.label :user
  = f.text_field :user
  .div
    = f.label :description
    = f.text_field :description
  .div
    = f.label :date
    = f.date_field :date
  .div
    = f.submit
    = link_to 'Back', lightning_talks_path
